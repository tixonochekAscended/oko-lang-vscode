{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "oko",
	"patterns": [
		{ "include": "#comments" },
		{ "include": "#keywords" },
		{ "include": "#moduleAccess" },
		{ "include": "#functions" },
		{ "include": "#numbers" },
		{ "include": "#strings" },
		{ "include": "#operators" }
	],
    "repository": {
		"moduleAccess": {
			"patterns": [
				{
					"match": "\\b([A-Za-z_][A-Za-z0-9_]*)\\b(::)([A-Za-z_][A-Za-z0-9_]*)",
					"captures": {
						"1": { "name": "entity.name.namespace.oko" },
						"2": { "name": "punctuation.separator.namespace.oko" },
						"3": { "name": "entity.name.function.oko" }
					}
				}
			]
		},
        "comments": {
            "patterns": [
                {
                    "name": "comment.line.double-slash.oko",
                    "match": "//.*$"
                }
            ]
        },
        "keywords": {
            "patterns": [
                {
                    "name": "keyword.control.oko",
                    "match": "\\b(import|fun|return|while|for|if|elif|else)\\b"
                }
            ]
        },
        "functions": {
            "patterns": [
                {
                    "name": "entity.name.function.oko",
                    "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\s*(?=\\()"
                }
            ]
        },
        "numbers": {
            "patterns": [
                {
                    "name": "constant.numeric.oko",
                    "match": "[-+]?\\d*\\.\\d+|[-+]?\\d+"
                }
            ]
        },
        "strings": {
            "patterns": [
                {
                    "name": "string.quoted.double.oko",
                    "begin": "\"",
                    "end": "\"",
                    "patterns": [
                        {
                            "name": "constant.character.escape.oko",
                            "match": "\\\\[ent\\\"]|\\\\e\\[[0-9;]*m"
                        }
                    ]
                }
            ]
        },
        "operators": {
            "patterns": [
                {
                    "name": "keyword.operator.oko",
                    "match": "(\\+|\\-|\\*|\\/|%|\\^|==|!=|<=|>=|<|>|&&|\\|\\||:=|=|\\+=|\\-=|\\*=|\\/=|::)"
                }
            ]
        }
    },
    "scopeName": "source.okolang"
}
